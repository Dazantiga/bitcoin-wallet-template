<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <div
    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
  >
    <h1>Edit transaction</h1>

  </div>
  <div class="row">
    <div class="col">
      <div class="row">
        <div class="col text-end">
          <span class="badge bg-success">Current price bitcoin:
            {{bitcoinBuy}}</span>
        </div>
      </div>
      <hr />
      <div class="row">
        <div class="col-3">
          <form
            id="form-transaction"
            method="post"
            action="/transactions/update"
          >
            <div class="mb-3">
              <label for="amount" class="form-label">Value</label>
              <input
                type="number"
                class="form-control"
                id="amount"
                name="amount"
                value="{{transaction.amount}}"
              />
            </div>
            <div class="mb-3">
              <label for="priceBitcoin" class="form-label">Price bitcoin</label>
              <input
                type="text"
                class="form-control"
                id="priceBitcoin"
                name="priceBitcoin"
                value="{{transaction.priceBitcoin}}"
              />
            </div>
            <div class="mb-3">
              <label for="qtyBitcoin" class="form-label">Qty bitcoin</label>
              <input
                type="number"
                class="form-control"
                id="qtyBitcoin"
                name="qtyBitcoin"
                readonly
                disabled
                required
                value="{{transaction.qty}}"
              />
            </div>
            <input
              type="hidden"
              class="form-control"
              id="id"
              name="id"
              value="{{transaction.id}}"
            />
            <button
              type="submit"
              id="btn-submit"
              class="btn btn-primary"
            >Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>

<script>
  var rootURL = "{{rootURL}}";
</script>
<script src="{{rootURL}}/js/transaction.js"></script>